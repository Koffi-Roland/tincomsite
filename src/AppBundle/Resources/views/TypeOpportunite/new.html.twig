{% extends '@App\\index.html.twig' %}

{% block pageName %}
    <h3 class="page-header"><i class="fa fa fa-bars"></i>
        Type opportunite
    </h3>
{% endblock %}

{% block panelHeading %}
    Ajout d'un type d'opportunite
{% endblock %}


{% block content %}
    <br>
    <div  class="col-md-6 col-md-offset-3">
        {{ form_start(form) }}
        <div class='form-group' id="dbType">
            <label>Libellé</label>
            {{ form_widget(form.libelle,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class='form-group'>
            <label>Description</label>
            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
        </div>

        <div class='form-group'>
            <label>Poste</label>
                {{ form_widget(form.poste,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_widget(form) }}

        <div class="form-group col-md-4">
            <input class="btn-info btn-lg btn-block" type="reset" value="Réinitialiser" />
        </div>
        <div class="form-group col-md-4">
            <a class="btn-danger btn-lg btn-block" type="button" href="{{path('typeOpportunite_index')}}">Voir la liste</a>
        </div>
        <div class="form-group col-md-4">
            <input class="btn-success btn-lg btn-block" type="submit" value="Ajouter" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}