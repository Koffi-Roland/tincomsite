{% extends '@App\\index.html.twig' %}

{% block pageName %}
    <h3 class="page-header"><i class="fa fa fa-bars"></i>
        Produit
    </h3>
{% endblock %}

{% block panelHeading %}
    Modifier un produit
{% endblock %}

{% block content %}
    <br>
    <div  class="col-md-6 col-md-offset-3">
        {{ form_start(form) }}
        <div class='form-group'>
            <label>Image du produit(300px * 200px)</label>
            {{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class='form-group'>
            <label>Catégorie du produit</label>
            {{ form_widget(form.categorieProduit,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class='form-group'>
            <label>Libellé</label>
            {{ form_widget(form.libelle,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class='form-group'>
            <label>Description</label>
            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class='form-group'>
            <label>Prix du produit</label>
            {{ form_widget(form.prixProduit,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class='form-group'>
            <label>Prix du gaz</label>
            {{ form_widget(form.prixGaz,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_widget(form) }}
        <div class="form-group col-md-4">
            <a class="btn btn-info btn-lg btn-block" href="{{ path('produit_new') }}">Nouvel produit</a>
        </div>
        <div class="form-group col-md-4">
            <a class="btn-danger btn-lg btn-block" type="button" href="{{path('produit_index')}}">Voir la liste</a>
        </div>
        <div class="form-group col-md-4">
            <input class="btn-success btn-lg btn-block" type="submit" value="Modifier" />
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}