{% for actualite in actualites %}
    <div class="row">
        <div class="span4">
            <a href='{{ path('actualite_display_sodigaz', {'slug':actualite.slug}) }}'><img src="{{ asset('uploads/actualites/' ~ actualite.image) }}" width="100%" height="170"></a>
        </div>
        <div class="span8">
            <span style="color: #0088cc;">{{ actualite.surTitre }}</span>
            <a href='{{ path('actualite_display_sodigaz', {'slug':actualite.slug}) }}' class='actualite_titre'><h3><strong>{{ actualite.titre }}</strong></h3></a>
            <p>{{ actualite.extrait }}</p>
            <div class="widget">
                <ul class="tags">
                    {% for categorieActualite in actualite.categorieActualite %}
                    <li><a href="{{ path('actualite_categorie_sodigaz', {'selectedCategorieActualite':categorieActualite.id}) }}">{{ categorieActualite.libelle }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
        <br>
        <hr>
        <br>
{% endfor %}
<div class="navigation">
    {{ knp_pagination_render(actualites) }}
</div>