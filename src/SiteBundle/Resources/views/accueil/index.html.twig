{% extends "@Site\\index.html.twig" %}

{% block content %}
    <section id="featured">
        <!-- start slider -->
        <!-- Slider -->
        <div id="nivo-slider">
            <div class="nivo-slider">
                <!-- Slide #1 image -->
                {% for slide in slides %}
                    <img src="{{  asset('uploads/slides/'~slide.image)}}" width="1583px" height="500px" alt="{{slide.libelle}}" title="#{{slide.id}}" />
                {% endfor %}
            </div>
            <div class="container">
                <div class="row">
                    <div class="span12">
                        <!-- Slide #1 caption -->
                        {% for slide in slides %}
                            <div class="nivo-caption" id="{{slide.id}}">
                                <div>
                                    <h2>{{slide.libelle|capitalize}} <strong>features</strong></h2>
                                    <p>
                                        {{slide.description|capitalize}}
                                    </p>
                                    <a href="#" class="btn btn-theme">Read More</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <!-- end slider -->
    </section>
    <section class="callaction">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="big-cta">
                        <div class="cta-text">
                            <h4>TINCOM <span class="highlight"><strong>établissement public de</strong></span> distribution de Gaz</h4>
                        </div>
                        <div class="cta floatright">
                            <a class="btn  btn-large btn-theme btn-rounded" href="{{ path('opportunite_sodigaz') }}">Opportunités</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="content">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="row">
                        {% for actualite in actualites %}
                            <div class="span3">
                                <div class="box aligncenter">
                                    <div class="aligncenter icon">
                                        <a href='{{ path('actualite_display_sodigaz', {'slug':actualite.slug}) }}'><img src="{{ asset('uploads/actualites/' ~ actualite.image) }}"></a>
                                    </div>
                                    <div class="text">
                                        <h6>{{ actualite.titre }}</h6>
                                        <p>
                                            {{ actualite.extrait }}
                                        </p>
                                        <a href="{{ path('actualite_display_sodigaz', {'slug':actualite.slug}) }}">En savoir plus</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <!-- divider -->
            <div class="row">
                <div class="span12">
                    <div class="solidline">
                    </div>
                </div>
            </div>
            <!-- end divider -->
            <!-- Portfolio Projects -->
            <div class="row">
                <div class="span12">
                    <h4 class="heading">Nos récentes images: &nbsp<span class="highlight"><strong>{{img.album.titre|capitalize}}</strong></span></h4>
                    <div class="row">
                        <section id="projects">
                            <ul id="thumbs" class="portfolio">
                                <!-- Item Project and Filter Name -->
                                {% for image in imager %}
                                    <li class="item-thumbs span3 design" data-id="id-0" data-type="web">
                                        <!-- Fancybox - Gallery Enabled - Title - Full Image -->
                                        <a class="hover-wrap fancybox" data-fancybox-group="gallery" title="{{image.titre|capitalize}}" href="{{  asset('uploads/images/'~image.image)}}">
                                            <span class="overlay-img"></span>
                                            <span class="overlay-img-thumb font-icon-plus"></span>
                                        </a>
                                        <!-- Thumb Image and Description -->
                                        <img src="{{  asset('uploads/images/'~image.image) }}" alt="{{image.description}}">
                                    </li>
                                {% endfor %}
                                <!-- End Item Project -->
                                <!-- Item Project and Filter Name -->
                        </section>
                    </div>
                </div>
            </div>
            <!-- End Portfolio Projects -->
            <!-- divider -->
            <div class="row">
                <div class="span12">
                    <div class="solidline">
                    </div>
                </div>
            </div>
            <!-- end divider -->
            <div class="row">
                <div class="span12">
                    <h4>Nos <strong>partenaires</strong></h4>
                    <ul id="mycarousel" class="jcarousel-skin-tango recent-jcarousel clients">
                        {% for partenaire in partenaires %}
                            <li>
                                <a href="#">
                                    <img src="{{  asset('uploads/partenaires/'~partenaire.image)}}" class="client-logo" alt="" />
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="bottom">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="aligncenter">
                        <div id="twitter-wrapper">
                            <div id="twitter">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}