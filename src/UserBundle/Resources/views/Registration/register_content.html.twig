{% trans_default_domain 'FOSUserBundle' %}

<div class="login-img3-body">
    <div class="container">
        <div class="login-wrap">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}  
            <div class="login-wrap">
                
                
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input type="text" class="form-control" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" name="_username" autofocus required="required" autocomplete="username" >
                </div>
                    {{ form_widget(form) }}
            </div>
            <div>
                <input type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>



{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login-img3-body">
    <div class="container">

        <form class="login-form"  action="{{ path("fos_user_security_check") }}" method="post">
            <div class="login-wrap">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <p class="login-img"><i class="icon_lock_alt"></i></p>

                

                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                    <input type="password" class="form-control" placeholder="{{ 'security.login.password'|trans }}"  name="_password" required="required" autocomplete="current-password">
                </div>

                <label class="checkbox">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
                </label>


                <button class="btn btn-primary btn-lg btn-block" value="{{ 'security.login.submit'|trans }}" type="submit" id="_submit" name="_submit">Login</button>
                <a class="btn btn-info btn-lg btn-block" href="{{ path('fos_user_registration_register') }}">{{ "sign up"|trans|upper }}</a>

            </div>
        </form>
        <div class="text-right">

        </div>
    </div>
</div>